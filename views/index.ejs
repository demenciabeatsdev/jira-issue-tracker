<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Jira Issue Tracker</title>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            max-width: 90%;
            margin: auto;
        }
        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }
        .form-container input,
        .form-container button {
            width: 50%;
            margin-bottom: 10px;
        }
        .table-container {
            margin-top: 20px;
        }
        .table {
            table-layout: fixed;
            width: 100%;
        }
        .table th, .table td {
            text-align: left;
            vertical-align: middle;
            padding: 10px; /* Ajuste del padding a 10px para mayor espacio */
            word-wrap: break-word;
            font-size: 1rem; /* Ajuste del tama√±o de la fuente */
        }
        .table th {
            background-color: #007bff;
            color: white;
            width: 25%; /* Asigna un ancho fijo a las cabeceras */
        }
        .table td {
            width: 75%; /* Asigna un ancho fijo a los valores */
        }
        .issue-table {
            margin-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Jira Issue Tracker</h1>
        <form action="/issue" method="POST" class="form-container">
            <input type="text" class="form-control" id="issueKey" name="issueKey" placeholder="Enter Jira Issue Key(s), separated by commas" required>
            <button type="submit" class="btn btn-primary">Search Issue</button>
        </form>

        <% if (typeof issueDataList !== 'undefined' && issueDataList.length > 0) { %>
            <% issueDataList.forEach(function(issueData) { %>
                <div class="table-container">
                    <table class="table table-bordered table-striped issue-table">
                        <tbody>
                            <tr>
                                <th>Key</th>
                                <td><%= issueData.key %></td>
                            </tr>
                            <tr>
                                <th>Summary</th>
                                <td><%= issueData.summary %></td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td><%= issueData.status %></td>
                            </tr>
                            <tr>
                                <th>Story Points</th>
                                <td><%= issueData.storyPoints %></td>
                            </tr>
                            <tr>
                                <th>Start Date</th>
                                <td><%= issueData.startDate %></td>
                            </tr>
                            <tr>
                                <th>Due Date</th>
                                <td><%= issueData.dueDate %></td>
                            </tr>
                            <tr>
                                <th>Reporter</th>
                                <td><%= issueData.reporter %></td>
                            </tr>
                            <tr>
                                <th>Labels</th>
                                <td><%= issueData.labels %></td>
                            </tr>
                            <tr>
                                <th>Estimated Dev End Date</th>
                                <td><%= issueData.estimatedDevEndDate %></td>
                            </tr>
                            <tr>
                                <th>Back to Fix</th>
                                <td><%= issueData.backToFix %></td>
                            </tr>
                            <tr>
                                <th>Analysis End Date</th>
                                <td><%= issueData.analysisEndDate %></td>
                            </tr>
                            <tr>
                                <th>Actual Start</th>
                                <td><%= issueData.actualStart %></td>
                            </tr>
                            <tr>
                                <th>Dev End Date</th>
                                <td><%= issueData.devEndDate %></td>
                            </tr>
                            <tr>
                                <th>Last Dev End Date</th>
                                <td><%= issueData.lastDevEndDate %></td>
                            </tr>
                            <tr>
                                <th>QA Start Date</th>
                                <td><%= issueData.qaStartDate %></td>
                            </tr>
                            <tr>
                                <th>Actual End</th>
                                <td><%= issueData.actualEnd %></td>
                            </tr>
                            <tr>
                                <th>Prod Start Date</th>
                                <td><%= issueData.prodStartDate %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            <% }); %>
        <% } else { %>
            <div class="alert alert-warning mt-4 text-center">No issue data found or an error occurred.</div>
        <% } %>
    </div>
</body>
</html>
